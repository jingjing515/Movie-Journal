// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  name     String
}
model JournalItem {
  id      Int     @id @default(autoincrement())
  title   String
  content String
  movie   String
}
model Movie {
  id        Int         @id @default(autoincrement())
  title     String
  director  String
  rating    Float
}
