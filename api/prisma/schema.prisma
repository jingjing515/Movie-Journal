// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  auth0Id      String    @unique @default("")
  //not in migration?
  email        String   @unique
  name         String
  journals JournalItem[]
  //not in migration?
}

model JournalItem {
  id      Int     @id@default(autoincrement())
  authorId  Int     
  author    User    @relation(fields: [authorId], references: [id])
  title   String
  content String
  Movie   Movie[]
  //not in migration?
}

model Movie {
  id      Int     @id@default(autoincrement())
  journalId Int
  title   String
  journals JournalItem @relation(fields: [journalId], references: [id])
  //not in migration?
}
